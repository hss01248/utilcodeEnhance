<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:id="@+id/btn_config"
        android:background="@drawable/crop_circle_drawable"
        android:text="配置"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_config"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_landscape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="横屏裁剪尺寸配置"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_portrait"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="竖屏裁剪尺寸配置"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_dir"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:text="文件夹配置(todo-> 是否隐藏,子文件夹,文件名前缀...)"
        android:layout_height="wrap_content"/>

</LinearLayout>
</ScrollView>