<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cn.bingoogolapple.qrcode.zbar.ZBarView
        android:id="@+id/zv_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="#33000000"
        app:qrcv_borderSize="0dp"
        app:qrcv_cornerColor="#FF2E2E"
        app:qrcv_cornerDisplayType="inside"
        app:qrcv_cornerLength="24dp"
        app:qrcv_cornerSize="2dp"
        app:qrcv_customScanLineDrawable="@drawable/my_scan_line"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isBarcode="false"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_isShowDefaultScanLineDrawable="false"
        app:qrcv_maskColor="#66000000"
        app:qrcv_qrCodeTipText=""
        app:qrcv_rectWidth="280dp"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_topOffset="200dp" />

    <com.hjq.bar.TitleBar
        android:id="@+id/qr_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        app:rightIcon="@drawable/qr_icon_photo_album"
        app:title="@string/qr_title" />

    <ImageView
        android:id="@+id/iv_flash"
        android:src="@drawable/icon_flash_closure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

